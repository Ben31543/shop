@model ProductPageModel

@{ ViewData["Title"] = "Index"; }


<head>
    <link rel="stylesheet" href="~/css/TablesView.css">
</head>

<h1>Products</h1>

@using (Html.BeginForm("Search", "Product", null, FormMethod.Post))
{
<div class="form-inline form-group">

    <label style="margin:15px; text-align: right">Product</label>
    @Html.TextBoxFor(s => s.SearchCriteria.SearchString, null, new { @class = "form-control", size = "10" })

    <label style="margin:15px;">Category </label>
    @Html.DropDownListFor(s => s.SearchCriteria.CategoryId, (SelectList)ViewData["Categories"], "All", new { @class = "form-control" })

    <label style="margin:15px;">Min Price: </label>
    @Html.TextBoxFor(s => s.SearchCriteria.MinValue, null, new { @class = "form-control", size = "2" })

    <label style="margin:5px;">Max Price: </label>
    @Html.TextBoxFor(s => s.SearchCriteria.MaxValue, null, new { @class = "form-control", size = "2" })

    <input type="submit" value="🔍" class="btn btn-dark" style="margin:15px;" />

    <a asp-action="Create" class="btn btn-dark" style="float: right;">+</a>
</div>}



<table class="table" border="1" aria-live="assertive">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Category
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Products)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @String.Format("{0:0.##}", item.Price) ֏
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id" title="Id: @item.Id &#10;Product Name: @item.Name &#10;Category: @item.CategoryName">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
